<div class="header-wrapper-oth">
  <h1 class="oth"><%= @period.name%>
    Report</h1>
</div>
<div class="form-wrapper">
  <div class="row">
    <div class="col-md-10 col-md-offset-1 clearfix">
      <table class="table">
        <th>Date</th>
        <th>Vendor</th>
        <th>Expense Type</th>
        <th>Amount</th>
        <tr>
          <% @period.transactions.each_with_index do |transaction| %>
            <td><%= transaction.period.month %>/<%= transaction.date %>/<%= transaction.period.year %></td>
            <td><%= transaction.vendor %></td>
            <td><%= transaction.subcategory.name%></td>
            <td><%= transaction.format_amount %></td>
          </tr>
        <% end %>
      </table>
      <table class="table">
        <th>Date</th>
        <th>Budget Category</th>
        <th>Budget Amount</th>
        <tr>
          <% @period.budgets.each_with_index do |budget| %>
            <td><%= budget.period.month %>/<%= budget.period.year %></td>
            <td><%= budget.category.name%></td>
            <td><%= budget.format_amount %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>
